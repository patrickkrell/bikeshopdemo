<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
    <div class="rating stars"></div>
    </p> 
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, cols: "30", rows: "5" %>
    </p>
    <p>
      <%= f.submit "Submit", class: "btn btn-default" %>
    </p>
  <% end %>
<% end %>
